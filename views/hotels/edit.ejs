<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/boilerplate.ejs">
   <div class="row white-card change-page ">
    <h1 class="text-center mt-3">Edit Hotel</h1>
    <div class="col-6 offset-3 my-3">
         <form action="/hotels/<%=hotel._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input  class="form-control"  for="text" id="title" name="hotel[title]" value="<%=hotel.title %>" required></input>
        <div class="valid-feedback">
            correctly completed
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label"  for="location">Location</label>
        <input  class="form-control"  for="text" id="location" name="hotel[location]" value="<%=hotel.location %>" required></input>
        <div class="valid-feedback">
            correctly completed
        </div>
      </div>
      <div class="mb-3 custom-file">
        <input class="form-control" type="file" id="image" name="image" multiple>
        <label for="formFileMultiple" class="form-label" for="image">
          <p class="form-file-text custom-file-label"><Add></Add more image(s)...></p>
        </label>
      </div>
      <div class="mb-3">
        
      <label class="form-label" for="price" >Hotel Price</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="price-label" >$</span>
        </div>
        <input type="text" class="form-control" name="hotel[price]" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" value="<%=hotel.price %>" required>
        <div class="valid-feedback">
            correctly completed
        </div>
      </div>
      </div>
        <div class="mb-3">
        <label class="form-label"  for="description">Desription</label>
        <textarea  class="form-control"  for="text" id="description" name="hotel[description]" required><%=hotel.description %></textarea>
        <div class="valid-feedback">
            correctly completed
        </div>
      </div>
      <div class="mb-3">
        <% hotel.images.forEach(function(img, i) { %>
         <div> 
          <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="photo">
          <div class="form-check-inline">
            <input type="checkbox" id="image-<%=i%>" name="deleteImgs[]" value="<%=img.filename%>">
          </div>
          <label for="">Delete?</label>
        </div>
       <% }) %> 
      </div>
      <div class="mb-3 d-flex justify-content-between align-items-center">
         <a href="/hotels/<%= hotel._id%>">Back To Hotel</a><button class="btn btn-success button button-blue" type="submit">Update Hotel</button></div>
    </form>
   
   
    </div>
    
   </div>



   