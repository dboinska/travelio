<% layout('layouts/boilerplate') %>
<div class="container container-register mt-5"><h1 class="color-blue">Login</h1>
<form action="/login" method="POST" class="validated-form" novalidate>
    <div class= "mb-3">
        <label class="form-label"  for="username">Username</label>
        <input  class="form-control"  type="text" id="username" name="username" required></input>
         <div class="valid-feedback">
            Correctly completed
        </div>
          <div class="invalid-feedback">
            Incorrectly completed
        </div>
      </div>
       <div class="mb-3">
        <label class="form-label"  for="password">Password</label>
        <input  class="form-control"  type="password" id="password" name="password" required></input>
         <div class="valid-feedback">
            Correctly completed
        </div>
          <div class="invalid-feedback">
            Incorrectly completed
        </div>
      </div>
     <div class="text-end">
       <button class="btn button button-blue text-white">Login</button>
     </div>
</form></div>
